@{
    List<Brand> brands = Model;
}

<div class="container-xl">
    <div>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Car brands</h2></div>
                </div>
            </div>
            <form method="post">
                @if (brands.Count > 0)
                {
                    <table id="Brands" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th class="col-1"></th>
                                <th class="col-10">Name</th>
                                <th class="col-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Brand brand in brands)
                            {
                                <tr>
                                    <td class="text-center">
                                        <input name="carBrandsIds" class="form-check-input" type="checkbox" value="@brand.Id" id="carBrandIdInput- + @brand.Id">
                                    </td>
                                    <td>
                                        @brand.Name
                                    </td>
                                    <td class="text-center">
                                        @*<a href="#" class="view" title="" data-toggle="tooltip" data-original-title="View"><i class="material-icons"></i></a>*@
                                        <a href="@Url.Action("editcarbrand", "admin")?carBrandId=@brand.Id" class="edit" title="" data-toggle="tooltip" data-original-title="Edit"><i class="material-icons"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <a asp-area="" asp-controller="admin" asp-action="addcarbrand" class="btn btn-success">Add brand</a>

                <button type="submit" class="btn btn-danger">Remove selected</button>

            </form>
        </div>
    </div>
</div>
