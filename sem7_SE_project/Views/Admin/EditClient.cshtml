@{
    Client client = Model;
}

<div class="container">
    <form method="post">
        <div class="form-text">
            <div class="row">
                <div class="col-sm-8"><h2>Add client</h2></div>
            </div>
        </div>
        <div class="mb-3">
            <label for="firstNameInput" class="form-label">First name</label>
            <input name="firstName" class="form-control" id="firstNameInput" value="@client.FirstName" required>
        </div>
        <div class="mb-3">
            <label for="lastNameInput" class="form-label">Last name</label>
            <input name="lastName" class="form-control" id="lastNameInput" value="@client.LastName" required>
        </div>
        <div class="mb-3">
            <label for="addressInput" class="form-label">Address</label>
            <input name="address" class="form-control" id="addressInput" value="@client.Address">
        </div>
        <div class="mb-3">
            <label for="phoneNumberInput" class="form-label">Phone number</label>
            <input name="phoneNumber" class="form-control" id="phoneNumberInput" value="@client.PhoneNumber">
        </div>
        <div class="mb-3">
            <label for="emailInput" class="form-label">Email</label>
            <input name="email" type="email" class="form-control" id="emailInput" value="@client.Email">
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-block">Edit</button>
        </div>
    </form>
</div>
