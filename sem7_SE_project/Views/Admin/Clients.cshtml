@{
    List<Client> clients = Model;
}

<div class="container-xl">
    <div>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Clients</h2></div>
                </div>
            </div>
            <form method="post">
                @if (clients.Count > 0)
                {
                    <table id="Clients" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th class="col-1"></th>
                                <th class="col-2">First name</th>
                                <th class="col-2">Last name</th>
                                <th class="col-2">Address</th>
                                <th class="col-2">Email</th>
                                <th class="col-2">Phone number</th>
                                <th class="col-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Client client in clients)
                            {
                                <tr>
                                    <td class="text-center">
                                        <input name="clientsIds" class="form-check-input" type="checkbox" value="@client.Id" id="carBrandIdInput- + @client.Id">
                                    </td>
                                    <td>
                                        @client.FirstName
                                    </td>
                                    <td>
                                        @client.LastName
                                    </td>
                                    <td>
                                        @if(client.Address != null)
                                        {
                                            @:@client.Address
                                        }
                                    </td>
                                    <td>
                                        @if (client.Email != null)
                                        {
                                            @:@client.Email
                                        }
                                    </td>
                                    <td>
                                        @if (client.PhoneNumber != null)
                                        {
                                            @:@client.PhoneNumber
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("editclient", "admin")?clientId=@client.Id" class="edit" title="" data-toggle="tooltip" data-original-title="Edit"><i class="material-icons"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <a asp-area="" asp-controller="admin" asp-action="addclient" class="btn btn-success">Add client</a>

                <button type="submit" class="btn btn-danger">Remove selected</button>

            </form>
        </div>
    </div>
</div>
