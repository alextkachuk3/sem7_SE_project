@{
    List<Model> carModels = Model;
}

<div class="container-xl">
    <div>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Car models</h2></div>
                </div>
            </div>
            <form method="post">
                @if (carModels.Count > 0)
                {
                    <table id="Brands" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th class="col-1"></th>
                                <th class="col-5">Model name</th>
                                <th class="col-5">Brand name</th>
                                <th class="col-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Model carModel in carModels)
                            {
                                <tr>
                                    <td class="text-center">
                                        <input name="carModelsIds" class="form-check-input" type="checkbox" value="@carModel.Id" id="carModelIdInput- + @carModel.Id">
                                    </td>
                                    <td>
                                        @carModel.Name
                                    </td>
                                    <td>
                                        @carModel.Brand!.Name
                                    </td>
                                    <td class="text-center">
                                        @*<a href="#" class="view" title="" data-toggle="tooltip" data-original-title="View"><i class="material-icons"></i></a>*@
                                        <a href="@Url.Action("editcarmodel", "admin")?carModelId=@carModel.Id" class="edit" title="" data-toggle="tooltip" data-original-title="Edit"><i class="material-icons"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <a asp-area="" asp-controller="admin" asp-action="addcarmodel" class="btn btn-success">Add model</a>

                <button type="submit" class="btn btn-danger">Remove selected</button>

            </form>
        </div>
    </div>
</div>
