@{
    List<Car> cars = Model;
}

<div class="container-xl">
    <div>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2>Car models</h2></div>
                </div>
            </div>
            <form method="post">
                @if (cars.Count > 0)
                {
                    <table id="Cars" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th class="col-1"></th>
                                <th class="col-5">Model name</th>
                                <th class="col-5">Registration number</th>
                                <th class="col-1"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Car car in cars)
                            {
                                <tr>
                                    <td class="text-center">
                                        <input name="carsIds" class="form-check-input" type="checkbox" value="@car.Id" id="carIdInput- + @car.Id">
                                    </td>
                                    <td>
                                        @car.Model.Name
                                    </td>
                                    <td>
                                        @car.RegistrationNumber
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("car", "admin")?carId=@car.Id" class="view" title="" data-toggle="tooltip" data-original-title="View"><i class="material-icons"></i></a>
                                        <a href="@Url.Action("editcar", "admin")?carId=@car.Id" class="edit" title="" data-toggle="tooltip" data-original-title="Edit"><i class="material-icons"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <a asp-area="" asp-controller="admin" asp-action="addcar" class="btn btn-success">Add car</a>

                <button type="submit" class="btn btn-danger">Remove selected</button>

            </form>
        </div>
    </div>
</div>
